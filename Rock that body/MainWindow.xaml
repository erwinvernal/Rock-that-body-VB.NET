<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rock_that_body"
        mc:Ignorable="d"
        WindowStyle="None" AllowsTransparency="True"
        Title="Rock That Body" 
        Height="720" Width="1280"
        Background="{Binding BackB}" Foreground="{Binding ForeB}"
        WindowStartupLocation="CenterScreen"
        d:DataContext="{d:DesignInstance Type=local:MainWindow}">

    <Grid x:Name="GridContainer">
        <MediaElement x:Name="MediaE" Visibility="Collapsed"/>
        <TextBlock Text="{Binding Text}" FontSize="68" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>

</Window>
